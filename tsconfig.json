{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "outDir": "dist/",
    "rootDir": "src/",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "removeComments": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "types": [
      "adal"
    ],
    "typeRoots": [
      "./src"
    ],
    "skipLibCheck": false
    // "globalDependencies": {
    //   "adal": "file:./src/adal.d.ts"
    // }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}